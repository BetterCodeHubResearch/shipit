    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "chalk": "^2.1.0",
    "codecov": "^2.3.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-import": "^2.7.0",
    "glob": "^7.1.2",
    "jest": "^21.0.1",
    "lerna": "^2.1.2",
    "micromatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "prettier": "^1.6.1",
    "std-mocks": "^1.0.1",
    "string-length": "^2.0.0"
